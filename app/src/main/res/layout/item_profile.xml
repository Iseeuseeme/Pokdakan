<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:isScrollContainer="true"
    android:scrollbars="none"
    android:padding="20dp"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginBottom="80dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Nama"
            android:textColor="@color/blue_grey_800"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners_edittext_light"
            android:drawablePadding="15dp"
            android:gravity="start|center_vertical"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:inputType="textNoSuggestions"
            android:textAlignment="viewStart"
            android:textColor="@color/textColorSecondary"
            android:textColorHint="@color/textColorPrimaryDark"
            android:hint="Nama"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Email"
            android:textColor="@color/blue_grey_800"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners_edittext_light"
            android:drawablePadding="15dp"
            android:gravity="start|center_vertical"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:inputType="textNoSuggestions"
            android:textAlignment="viewStart"
            android:textColor="@color/textColorSecondary"
            android:textColorHint="@color/textColorPrimaryDark"
            android:hint="Email"/>


        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Telepon"
            android:textColor="@color/blue_grey_800"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/telepon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners_edittext_light"
            android:drawablePadding="15dp"
            android:gravity="start|center_vertical"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:inputType="number"
            android:textAlignment="viewStart"
            android:textColor="@color/textColorSecondary"
            android:textColorHint="@color/textColorPrimaryDark"
            android:hint="0"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Alamat"
            android:textColor="@color/blue_grey_800"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/alamat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners_edittext_light"
            android:drawablePadding="15dp"
            android:gravity="start|center_vertical"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:inputType="textNoSuggestions"
            android:textAlignment="viewStart"
            android:textColor="@color/textColorSecondary"
            android:textColorHint="@color/textColorPrimaryDark"
            android:hint="Alamat"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Password"
            android:textColor="@color/blue_grey_800"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners_edittext_light"
            android:drawablePadding="15dp"
            android:gravity="start|center_vertical"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:inputType="textPassword"
            android:textAlignment="viewStart"
            android:textColor="@color/textColorSecondary"
            android:textColorHint="@color/textColorPrimaryDark"
            android:hint="Password"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Password Konfirmasi"
            android:textColor="@color/blue_grey_800"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/password_konfirmasi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners_edittext_light"
            android:drawablePadding="15dp"
            android:gravity="start|center_vertical"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:inputType="textPassword"
            android:textAlignment="viewStart"
            android:textColor="@color/textColorSecondary"
            android:textColorHint="@color/textColorPrimaryDark"
            android:hint="Password Konfirmasi"/>


        <Button
            android:id="@+id/simpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_corners_button_new"
            android:textColor="#ffffff"
            android:text="Simpan"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</ScrollView>